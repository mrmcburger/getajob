{% form_theme form 'MrmcburgerGetajobBundle:Form:fields.html.twig' %}

{% extends '::base.html.twig' %}

{% block title %}Entreprise - Modifier{% endblock %}

{% block stylesheets %}
  <link href="{{ asset('bundles/mrmcburgergetajob/css/company.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block sidebar %}
  <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="brand" href="{{ path('mrmcburger_getajob_homepage') }}">GetAJob</a>
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li class="dropdown active">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Mes Entreprises<b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><a href="{{ path('mrmcburger_getajob_new_company') }}">Ajouter</a></li>
                  <li><a href="{{ path('mrmcburger_getajob_list_company') }}">Lister</a></li>
                  <li><a href="#">Classement</a></li>
                </ul>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Mes Candidatures<b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><a href="#">Ajouter</a></li>
                  <li><a href="#">Lister</a></li>
                  <li><a href="#">Historique</a></li>
                </ul>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Mes Entretiens<b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><a href="#">Ajouter</a></li>
                  <li><a href="#">Planning</a></li>
                </ul>
              </li>
              <li><a href="#">Mes Retours</a></li>
              <li><a href="{{ path('mrmcburger_getajob_show_global_criteria') }}">Mes Critères</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
{% endblock %}

{% block body %}
<div class="container">
 <div class="hero-unit hero-unit-company">
  {% if company is null %}
    <h1>Aucune entreprise trouvée</h1>
  {% else %}
      <h1>Modifier {{ company.name }}</h1>
      <div id="show-company">
        <div id="show-company-header">
          <div id="show-company-header-left">
            <button id="see-button" class="btn btn-primary">Voir</button>
          </div>
          <div id="show-company-header-right">
             <button id="modify-button" class="btn btn-inverse" disabled>Modifier</button>
          </div>
        </div>
 <form id="modify_company" method="post" action="">
        <div id="new_company_left">
          <div id="new_company_left_left">
            {{ form_label(form.sector) }}
            <div id="newcompany-address-label">
              <span id="address-label">Adresse :<br /></span>
              {{ form_label(form.address.number) }}
              {{ form_label(form.address.type) }}
              {{ form_label(form.address.name) }}
              {{ form_label(form.address.additional) }}
              {{ form_label(form.address.zip) }}
              {{ form_label(form.address.city) }}
            </div>
            {{ form_label(form.numbers) }}
            {{ form_label(form.phone) }}
            {{ form_label(form.mail) }}
            {{ form_label(form.presentation) }}
            {{ form_widget(form.add_company) }}
            {{ form_widget(form._token) }}
          </div>
          <div id="new_company_left_right">
            {{ form_widget(form.sector) }} {{ form_errors(form.sector) }}
            <div id="newcompany-address-widget">
              {{ form_widget(form.address.number) }} {{ form_errors(form.address.number) }}
              {{ form_widget(form.address.type) }} {{ form_errors(form.address.type) }}
              {{ form_widget(form.address.name) }} {{ form_errors(form.address.name) }}
              {{ form_widget(form.address.additional) }} {{ form_errors(form.address.additional) }}
              {{ form_widget(form.address.zip) }} {{ form_errors(form.address.zip) }}
              {{ form_widget(form.address.city) }} {{ form_errors(form.address.city) }}
            </div>
            {{ form_widget(form.numbers) }} {{ form_errors(form.numbers) }}
            {{ form_widget(form.phone) }} {{ form_errors(form.phone) }}
            {{ form_widget(form.mail) }} {{ form_errors(form.mail) }}
            {{ form_widget(form.presentation) }} {{ form_errors(form.presentation) }}
          </div>
        </div>
        <div id="new_company_right">
          <div id="new_company_right_left">
            {{ form_label(form.companycriteria.displacement) }}
            {{ form_label(form.companycriteria.celebrity) }}
            {{ form_label(form.companycriteria.missionInterest) }}
            {{ form_label(form.companycriteria.salaryExpectation) }}
            {{ form_label(form.companycriteria.workConditions) }}
            {{ form_label(form.companycriteria.evolutionPossibilities) }}
          </div>
          <div id="new_company_right_right">
            {{ form_widget(form.companycriteria.displacement) }} {{ form_errors(form.companycriteria.displacement) }}
            {{ form_widget(form.companycriteria.celebrity) }} {{ form_errors(form.companycriteria.celebrity) }}
            {{ form_widget(form.companycriteria.missionInterest) }} {{ form_errors(form.companycriteria.missionInterest) }}
            {{ form_widget(form.companycriteria.salaryExpectation) }} {{ form_errors(form.companycriteria.salaryExpectation) }}
            {{ form_widget(form.companycriteria.workConditions) }} {{ form_errors(form.companycriteria.workConditions) }}
            {{ form_widget(form.companycriteria.evolutionPossibilities) }} {{ form_errors(form.companycriteria.evolutionPossibilities) }}
          </div>
        </div>
      </form>
  {% endif %}
  </div>
</div>
{% endblock %}

{% block javascripts %}
  <script type="text/javascript">
     {% if company is not empty %}
       var id_company= {{ company.id }};
    {% endif %}
  </script>
  <script src="{{ asset('bundles/mrmcburgergetajob/js/company.js') }}" type="text/javascript" ></script>
{% endblock %}


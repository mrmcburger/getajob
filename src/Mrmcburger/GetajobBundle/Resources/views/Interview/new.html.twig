{% form_theme form 'MrmcburgerGetajobBundle:Form:fields.html.twig' %}

{% extends '::base.html.twig' %}

{% block title %}Entretien - Ajouter{% endblock %}

{% block stylesheets %}
  <link href="{{ asset('bundles/mrmcburgergetajob/css/interview.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block sidebar %}
  <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="brand" href="{{ path('mrmcburger_getajob_homepage') }}">GetAJob</a>
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Mes Entreprises<b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><a href="{{ path('mrmcburger_getajob_new_company') }}">Ajouter</a></li>
                  <li><a href="{{ path('mrmcburger_getajob_list_company', { 'page': '1' }) }}">Lister</a></li>
                  <li><a href="{{ path('mrmcburger_getajob_rank_company', { 'page': '1' }) }}">Classement</a></li>
                </ul>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Mes Candidatures<b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><a href="{{ path('mrmcburger_getajob_new_application') }}">Ajouter</a></li>
                  <li><a href="{{ path('mrmcburger_getajob_list_application', { 'page': '1' }) }}">Lister</a></li>
                  <li><a href="{{ path('mrmcburger_getajob_history_application', { 'page': '1' }) }}) }}">Historique</a></li>
                </ul>
              </li>
              <li class="dropdown active">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Mes Entretiens<b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><a href="{{ path('mrmcburger_getajob_new_interview') }}">Ajouter</a></li>
                  <li><a href="#">Planning</a></li>
                </ul>
              </li>
              <li><a href="#">Mes Retours</a></li>
              <li><a href="{{ path('mrmcburger_getajob_show_global_criteria') }}">Mes Crit√®res</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
{% endblock %}

{% block body %}
<div class="container">
 <div class="hero-unit hero-unit-company">
    <h1>Ajouter un entretien</h1>
      <form id="new_interview" method="post" action=""}>
        <div id="new_interview_left">
          <div id="new_interview_left_left">
            {{ form_label(form.application) }}
            {{ form_label(form.date) }}
            <div id="newinterview-address-label">
              <span id="address-label">Adresse :<br /></span>
              {{ form_label(form.address.number) }}
              {{ form_label(form.address.type) }}
              {{ form_label(form.address.name) }}
              {{ form_label(form.address.additional) }}
              {{ form_label(form.address.zip) }}
              {{ form_label(form.address.city) }}
            </div>
            {{ form_widget(form.add_interview) }}
            {{ form_widget(form._token) }}
          </div>
          <div id="new_interview_left_right">
            {{ form_widget(form.application) }} {{ form_errors(form.application) }}
            {{ form_widget(form.date) }} {{ form_errors(form.date) }}
            <div id="newinterview-address-widget">
              {{ form_widget(form.address.number) }} {{ form_errors(form.address.number) }}
              {{ form_widget(form.address.type) }} {{ form_errors(form.address.type) }}
              {{ form_widget(form.address.name) }} {{ form_errors(form.address.name) }}
              {{ form_widget(form.address.additional) }} {{ form_errors(form.address.additional) }}
              {{ form_widget(form.address.zip) }} {{ form_errors(form.address.zip) }}
              {{ form_widget(form.address.city) }} {{ form_errors(form.address.city) }}
          </div>
          </div>
        </div>
        <div id="new_interview_right">
          <div id="new_interview_right_left">
            {{ form_label(form.contactName) }}
            {{ form_label(form.comments) }}
          </div>
          <div id="new_interview_right_right">
            {{ form_widget(form.contactName) }} {{ form_errors(form.contactName) }}
            {{ form_widget(form.comments) }} {{ form_errors(form.comments) }}
          </div>
        </div>
      </form>
</div>
{% endblock %}

{% block javascripts %}
  <script src="{{ asset('bundles/mrmcburgergetajob/js/interview.js') }}" type="text/javascript" ></script>
{% endblock %}
